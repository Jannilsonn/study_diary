<% content_for :title do %>
    <%= @study_item.title %>
<% end %>

<section>
    <div class="box-item">
        <h4 class="done">
            <% if @study_item.done %>
                <small class="doneT">Concluído</small>
            <% else %>
                <small class="doneF">Pendente</small>
            <% end %>
        </h4>
        <p>Título: <strong><%= @study_item.title %></strong></p>
        <br/>
        <p>Categoria: <strong><%= @study_item.category %></strong></p>
        <% if !@study_item.description.empty? %>
            <br/>
            <p>Descrição: <strong><%= @study_item.description %></strong></p>
        <% end %>
    </div>
</section>